<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ucsd.meetup.create_activity_Activity"
    tools:showIn="@layout/activity_create_event">

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/activityNameCreateEvent"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/timeDateCreateEvent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Activity Name" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/locationCreateEvent"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/activityNameCreateEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Where" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/timeDateCreateEvent"
        android:text="When"
        android:layout_above="@+id/activityTypeCreateEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/activityTypeCreateEvent"
        android:text="Activity Type"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/timeDateCreateEvent"
        android:layout_alignStart="@+id/timeDateCreateEvent" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionEvent"
        android:layout_marginTop="40dp"
        android:text="Description"
        android:layout_below="@+id/activityTypeCreateEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
